<main class="container-fluid">
   <div class="d-flex row justify-content-center">
      <div class="col col-xl-2 mb-3">
         <div class="card">
            <h5 class="card-header font-weight-bold bg-primary text-white text-shadow">Quote calculator</h5>
            <div class="card-body" id="panel">
               <div class="row hidden" id="displayAddress">
                  <div class="col-12 card-text" id="primaryAddress"></div>
                  <div class="col-8 card-text" id="secondaryAddress"></div>
                  <div class="col-4">
                     <button 
                        type="button" 
                        class="btn edit-button btn-sm m-3" 
                        data-toggle="modal" 
                        data-target="#addressSubmitModal" 
                        id="searchAddressButton">âœŽ
                     </button>
                  </div>
               </div>
               <form action="" id="SubmitQuote">
                  <dl class="hidden">
                     <dt class="m-3 mt-5">Selected area: </dt>
                     <dd class="text-right"><span id="calculatedArea"></span> sq ft</dd>
                     <dt class="p-3">Total: </dt>
                     <dd class="text-right">$<span id="totalDue"></span></dd>
                     <input 
                        id="quoteSubmit" 
                        type="submit" 
                        value="Send me this quote" 
                        class="btn btn-block btn-dark shadow-lg"
                        data-toggle="modal" 
                        data-target="#submitQuoteModal"
                     >
                  </dl>
               </form>
            </div>
         </div>
      </div>
      <div class="col col-xl">
         <div class="card">
            <h5 class="card-header font-weight-bold bg-primary text-white text-shadow">Select the area to be serviced</h5>
            <div class="card-body">
               <div id="map">
               </div>
            </div>
         </div>
      </div>
   </div>
</main>
<!-- ADDRESS SEARCH MODAL -->
<div class="modal fade" id="addressSubmitModal" tabindex="-1" role="dialog" aria-labelledby="addressSubmitModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
         <div class="modal-header bg-primary">
            <h5 class="modal-title text-white text-shadow" id="addressSubmitModalLabel">Let's start looking for your address:</h5>
         </div>
         <form action="" id="AddressSearch">
            <div class="modal-body d-flex justify-content-center">
               <input id="address" type="textbox" placeholder="123 Street Rd, Port Moody" size="45">
               <input id="submit" type="submit" value="Find" class="btn btn-dark ml-3">
            </div>
         </form>
      </div>
   </div>
</div>

<!-- QUOTE MODAL -->
<div class="modal fade" id="submitQuoteModal" tabindex="-1" role="dialog" aria-labelledby="submitQuoteModalTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title text-white text-shadow">Service details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <%= simple_form_for(@quote, remote: true) do |form| %>
            <div class="modal-body">
               <dl>Address: <span id="addressModal"></span> </dl>
               <dl>Area: <span id="areaModal"></span> sq ft</dl>
               <dl>Total: $<span id="totalModal"></span> </dl>
               <div class="hidden" id="modal_errors" class="modal_errors"></div>
               <%= form.input :email, label: "Email"%>
               <%= form.input :first_name, label: "First name" %>
               <%= form.input :last_name, label: "Last name"%>
               <%= form.input :address, :as => :hidden%>
               <%= form.input :area, :as => :hidden%>
               <%= form.input :total, :as => :hidden%>
               <%= form.input :polygons, :as => :hidden%>
               <%= form.input :comments, input_html: { placeholder: 'How can we best serve you?'}%>
            </div>
            <div class="modal-footer">
               <button type="button" class="btn btn-warning" data-dismiss="modal">Not yet! I need to make changes</button>
               <%= form.submit "Submit quote", class: 'btn btn-dark', data: {toggle: 'modal', target: '#successModal'} %>
            </div>
         <% end %>
      </div>
   </div>
</div>

<!-- SUCCESS MODAL -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
         <div class="modal-header">
         <h5 class="modal-title text-white text-shadow" id="modalTitle">THANK YOU!</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>
         </div>
         <div class="modal-body">
            <p>You will shortly receive an email with the details for the service requested.</p>
            <p>Snow Queen will be in touch with you in the next 24hrs.</p> 
         </div>
         <div class="modal-footer">
         <button type="button" class="btn btn-primary" data-dismiss="modal">See you soon!</button>
         </div>
      </div>
   </div>
</div>
<script async defer
   src="https://maps.googleapis.com/maps/api/js?key=<%=Rails.application.credentials.google_api%>&libraries=drawing&callback=initMap">
</script>