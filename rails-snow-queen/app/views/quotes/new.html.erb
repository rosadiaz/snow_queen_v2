<div class="d-flex row">
   <div id="panel" class="col-4 p-5">
      <h1>Quote calculator</h1>
      <p>Get a free quote for a salting or snow clearing service</p>

      <form action="" id="AddressSearch">
         <label for="address">Search your location:</label><br>
         <input id="address" type="textbox" placeholder="123 Street Rd, Port Moody" size="40">
         <input id="submit" type="submit" value="Find" class="btn btn-light btn-sm">
      </form>
      <div class="hidden address" id="displayAddress">
      </div>
      <form action="" id="SubmitQuote">
         <dl class="hidden">
            <dt class="m-3 mt-5">Selected area: </dt>
            <dd class="text-right"><span id="calculatedArea"></span> sq ft</dd>
            <dt class="p-3">Total: </dt>
            <dd class="text-right">$<span id="totalDue"></span></dd>
            <input 
               id="quoteSubmit" 
               type="submit" 
               value="Send me this quote" 
               class="btn btn-block btn-warning shadow-lg"
               data-toggle="modal" 
               data-target="#submitQuoteModal"
            >
         </dl>
      </form>
      <div class="modal fade" id="submitQuoteModal" tabindex="-1" role="dialog" aria-labelledby="submitQuoteModalTitle" aria-hidden="true">
         <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
               <div class="modal-header">
                  <h5 class="modal-title">Service details</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <%= simple_form_for(@quote, remote: true) do |form| %>
                  <div class="modal-body">
                     <p>Address: <span id="addressModal"></span> </p>
                     <p>Area: <span id="areaModal"></span> sq ft</p>
                     <p>Total: $<span id="totalModal"></span> </p>
                     <div class="hidden" id="modal_errors"></div>
                     <%= form.input :email, label: "Email"%>
                     <%= form.input :first_name, label: "First name" %>
                     <%= form.input :last_name, label: "Last name"%>
                     <%= form.input :address, :as => :hidden%>
                     <%= form.input :area, :as => :hidden%>
                     <%= form.input :total, :as => :hidden%>
                     <%= form.input :comments, input_html: { placeholder: 'How can we best serve you?'}%>
                  </div>
                  <div class="modal-footer">
                     <button type="button" class="btn btn-warning" data-dismiss="modal">Don't send! Go back to make changes</button>
                     <%= form.submit "Submit quote", class: 'btn btn-primary' %>
                  </div>
               <% end %>
            </div>
         </div>
      </div>
   </div>
   <div id="map" class="col-8">
   </div>
</div>

<script async defer
   src="https://maps.googleapis.com/maps/api/js?key=<%=Rails.application.credentials.google_api%>&libraries=drawing&callback=initMap">
</script>