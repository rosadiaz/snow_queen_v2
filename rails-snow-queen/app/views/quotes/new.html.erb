<div class="d-flex row">
   <div id="panel" class="col-4 p-5">
      <h1>Quote calculator</h1>
      <p>Get a free quote for a salting or snow clearing service</p>

      <!-- ADDRESS SEARCH MODAL -->
      <div class="modal fade" id="addressSubmitModal" tabindex="-1" role="dialog" aria-labelledby="addressSubmitModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
         <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
               <div class="modal-header">
                  <h5 class="modal-title" id="addressSubmitModalLabel">Let's start looking for your address:</h5>
               </div>
               <form action="" id="AddressSearchModal">
                  <div class="modal-body">
                     <input id="address" type="text" placeholder="123 Street Rd, Port Moody" size="40">
                     <input id="submit" type="submit" value="Find" class="btn btn-primary ">
                  </div>
               </form>
            </div>
         </div>
      </div>


      <div class="hidden address" id="displayAddress">
      </div>
      <button type="button" class="btn btn-primary hidden" data-toggle="modal" data-target="#addressSubmitModal" id="searchAddressButton">
         Change address
      </button>
      <form action="" id="SubmitQuote">
         <dl class="hidden" id="displayTotals">
            <dt class="m-3 mt-5">Selected area: </dt>
            <dd class="text-right"><span id="calculatedArea"></span> sq ft</dd>
            <dt class="p-3">Total: </dt>
            <dd class="text-right">$<span id="totalDue"></span></dd>
            <input 
               id="quoteSubmit" 
               type="submit" 
               value="Send me this quote" 
               class="btn btn-block btn-warning shadow-lg"
               data-toggle="modal" 
               data-target="#submitQuoteModal"
            >
         </dl>
      </form>
      <!-- QUOTE MODAL -->
      <div class="modal fade" id="submitQuoteModal" tabindex="-1" role="dialog" aria-labelledby="submitQuoteModalTitle" aria-hidden="true">
         <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
               <div class="modal-header">
                  <h5 class="modal-title">Service details</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <%= simple_form_for(@quote, remote: true) do |form| %>
                  <div class="modal-body">
                     <dl>Map: 
                        <span id="mapImageModal">
<img 
   src="//maps.googleapis.com/maps/api/staticmap
?size=400x400&center=40.653279,-73.959816&zoom=11
&path=fillcolor:0xAA000033%7Ccolor:0xFFFFFF00%7Cenc:}zswFtikbMjJzZ%7CRdPfZ}DxWvBjWpF~IvJnEvBrMvIvUpGtQpFhOQdKpz@bIx{A%7CPfYlvApz@bl@tcAdTpGpVwQtX}i@%7CGen@lCeAda@bjA%60q@v}@rfAbjA%7CEwBpbAd_@he@hDbu@uIzWcWtZoTdImTdIwu@tDaOXw_@fc@st@~VgQ%7C[uPzNtA%60LlEvHiYyLs^nPhCpG}SzCNwHpz@cEvXg@bWdG%60]lL~MdTmEnCwJ[iJhOae@nCm[%60Aq]qE_pAaNiyBuDurAuB}}Ay%60@%7CEKv_@?%7C[qGji@lAhYyH%60@Xiw@tBerAs@q]jHohAYkSmW?aNoaAbR}LnPqNtMtIbRyRuDef@eT_z@mW_Nm%7CB~j@zC~hAyUyJ_U{Z??cPvg@}s@sHsc@_z@cj@kp@YePoNyYyb@_iAyb@gBw^bOokArcA}GwJuzBre@i\tf@sZnd@oElb@hStW{]vv@??kz@~vAcj@zKa%60Atf@uQj_Aee@pU_UrcA
&key=AIzaSyDafFObZ3lBKKVKjYwxGL2xcvqVEwC68XY" 
   alt="Requested service area"
>
                        </span> 
                     </dl>
                     <dl>Address: <span id="addressModal"></span> </dl>
                     <dl>Area: <span id="areaModal"></span> sq ft</dl>
                     <dl>Total: $<span id="totalModal"></span> </dl>
                     <div class="hidden modal_errors" id="modal_errors"></div>
                     <%= form.input :email, label: "Email" %>
                     <%= form.input :first_name, label: "First name" %>
                     <%= form.input :last_name, label: "Last name" %>
                     <%= form.input :address, :as => :hidden %>
                     <%= form.input :area, :as => :hidden %>
                     <%= form.input :total, :as => :hidden %>
                     <%= form.input :polygons, :as => :hidden %>
                     <%= form.input :comments, input_html: { placeholder: 'How can we best serve you?'} %>
                  </div>
                  <div class="modal-footer">
                     <button type="button" class="btn btn-warning" data-dismiss="modal">Not yet! I need to make changes</button>
                     <%= form.submit "Submit quote", class: 'btn btn-primary' %>
                  </div>
               <% end %>
            </div>
         </div>
      </div>

      <!-- SUCCESS MODAL -->
      <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalTitle" aria-hidden="true">
         <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
               <div class="modal-header">
                  <h5 class="modal-title" id="modalTitle">THANK YOU!</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                  </button>
               </div>
               <div class="modal-body">
                  <p>You will shortly receive an email with the details for the service requested.</p>
                  <p>Snow Queen will be in touch with you in the next 24hrs.</p> 
               </div>
               <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">See you soon!</button>
               </div>
            </div>
         </div>
      </div>

   </div>
   <div id="map" class="col-8">
   </div>
   <div>Map
      <img 
         src="https://maps.googleapis.com/maps/api/staticmap?center=40.714728,-73.998672&zoom=12&size=400x400&key=<%=Rails.application.credentials.google_api%>" 
         alt="Requested service area"
      >
   </div>
</div>

<script async defer
   src="https://maps.googleapis.com/maps/api/js?key=<%=Rails.application.credentials.google_api%>&libraries=drawing&callback=initMap">
</script>